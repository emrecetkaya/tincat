<%- include("partials/header") %> 

    <section id="title">
      <div class="container-fluid">
        <!-- Title -->
        <div class="row">
          <div class="col-md-6 left-row">
            <h1 class="big-heading">Meet new and interesting cats nearby.</h1>
            <button type="button" class="btn btn-dark btn-lg download-btn"><i class="fa-brands fa-apple"></i> Download</button>
            <button type="button" class="btn btn-outline-light btn-lg download-btn">
              <i class="fa-brands fa-google-play"></i>
              Download
            </button>
          </div>
          <div class="col-md-6 right-row">
            <img class="title-img" src="images/iphone6.png" alt="iphone-mockup" />
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->

    <section id="features">
      <div class="row">
        <div class="feature-box col-md-4">
          <i class="icon fa-solid fa-circle-check fa-4x"></i>
          <h3>Easy to use.</h3>
          <p>So easy to use, even your cat could do it.</p>
        </div>
        <div class="feature-box col-md-4">
          <i class="icon fa-solid fa-bullseye fa-4x"></i>
          <h3>Elite Clientele</h3>
          <p>We have all the cats, the greatest cats.</p>
        </div>
        <div class="feature-box col-md-4">
          <i class="icon fa-solid fa-heart fa-4x"></i>
          <h3>Guaranteed to work.</h3>
          <p>Find the love of your cat's life or your money back.</p>
        </div>
      </div>
    </section>

    <!-- Testimonials -->

    <section id="testimonials">
      <div id="testimonial-carousel" class="carousel slide" data-bs-ride="false">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <h2>I no longer have to sniff other cats for love. I've found the hottest Scottish Fold on tincat. Meow.</h2>
            <img class="testimonial-image" src="images/cat_btf.jpeg" alt="cat-profile" />
            <em>Milo, San Francisco</em>
          </div>
          <div class="carousel-item">
            <h2>My cat used to be so lonely, but with tincat's help, they've found the love of their life. I think.</h2>
            <img class="testimonial-image" src="images/lady-img.jpg" alt="lady-profile" />
            <em>Beverly, Austin</em>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#testimonial-carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </section>

    <!-- Press -->

    <section id="press">
      <img class="press-image" src="images/techcrunch.png" alt="tc-logo" />
      <img class="press-image" src="images/tnw.png" alt="tnw-logo" />
      <img class="press-image" src="images/bizinsider.png" alt="biz-insider-logo" />
      <img class="press-image" src="images/mashable.png" alt="mashable-logo" />
    </section>

    <!-- Pricing -->

    <section id="pricing">
      <h2>A Plan for Every Cat's Needs</h2>
      <p>Simple and affordable price plans for your and your cat.</p>

      <div class="row">
        <div class="pricing-column col-lg-4 col-md-6">
          <div class="card">
            <div class="card-header"><h3>Siberian</h3></div>
            <div class="card-body">
              <h2 class="price-tags">Free</h2>
              <p>5 Matches Per Day</p>
              <p>10 Messages Per Day</p>
              <p>Unlimited App Usage</p>
              <button class="btn w-100 btn-outline-dark btn-lg" type="button">Sign Up</button>
            </div>
          </div>
        </div>
        <div class="pricing-column col-lg-4 col-md-6">
          <div class="card">
            <div class="card-header"><h3>Shorthair</h3></div>
            <div class="card-body">
              <h2 class="price-tags">$19 / mo</h2>
              <p>Unlimited Matches</p>
              <p>Unlimited Messages</p>
              <p>Unlimited App Usage</p>
              <button class="btn w-100 btn-dark btn-lg" type="button">Sign Up</button>
            </div>
          </div>
        </div>
        <div class="pricing-column col-lg-4 col-md-12">
          <div class="card">
            <div class="card-header"><h3>Bengal</h3></div>
            <div class="card-body">
              <h2 class="price-tags">$29 / mo</h2>
              <p>Pirority Listing</p>
              <p>Unlimited Matches</p>
              <p>Unlimited Messages</p>
              <p>Unlimited App Usage</p>
              <button class="btn w-100 btn-dark btn-lg" type="button">Sign Up</button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->

    <section id="cta">
      <div class="container-fluid call-action">
        <h3 class="big-heading">Find the True Love of Your Cat's Life Today.</h3>
        <button class="btn btn-dark btn-lg action-btn" type="button"><i class="fa-brands fa-apple"></i> Download</button>
        <button class="btn btn-light btn-lg action-btn" type="button"><i class="fa-brands fa-google-play"></i> Download</button>
      </div>
    </section>

    <!-- Footer -->

    <%- include('partials/footer'); %>
  </body>
</html>
